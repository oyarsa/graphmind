graphmind.maleldil.com {
    log {
        output file /data/access.log {
            roll_size 50MiB
            roll_keep 3
        }
        format json
    }

    @scanners {
        path /.env /.git/* /wp-admin/* /wp-login* /phpMyAdmin*
        path /.aws/* /.docker/* /.kube/* /config.json /credentials
        path /actuator/* /api/v1/pods /server-status /debug/*
    }
    respond @scanners 403

    handle {
        reverse_proxy graphmind:8000
    }
}

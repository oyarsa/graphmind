    echo "Ablation metrics for model: {{model}}, demos: {{demos}}"
    {{root}}/scripts/experiments/show_eval_results.fish {{ablation_output}}/**/metrics.json

peter_ablation_output := root+"/"+output_dir+"/peter-ablation/"+name+"-ablation/"+model+"/"+demos

# Cited-only PETER

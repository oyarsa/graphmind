    @just _peter-ablation related full

# Full graph (GraphMind) - runs graph-full and copies to peter ablation output
[group: 'peter-ablation']
peter-graphmind: (_t "Running full graph with full PETER papers")
    @just _graph full-graph
    @mkdir -p {{peter_ablation_output}}/g_full-graph-e_full/
    @cp -r {{output}}/graph/full-graph/* {{peter_ablation_output}}/g_full-graph-e_full/

# Run all PETER ablations including GraphMind
[group: 'peter-ablation']
peter-ablation-all: (_t "Running all PETER ablations")
    # Print the output directory relative to the repository root
    @printf "Output directory: %s\n" "$(echo '{{peter_ablation_output}}' | sed 's|^{{root}}/||')"

    @just peter-graphmind
    @just peter-cited-full
    @just peter-semantic-full
    @just peter-norel
    @just peter-nograph
    @just peter-ablation-metrics

# Show metrics for PETER ablations
[group: 'peter-ablation']
peter-ablation-metrics:
    #!/usr/bin/env fish
    echo "PETER ablation metrics for model: {{model}}, demos: {{demos}}"
    echo "{{peter_ablation_output}}"
    {{root}}/scripts/experiments/show_eval_results.fish {{peter_ablation_output}}/**/metrics.json

rationale_flags := " -n " + n + " -m " + model +  " --graphs " + data_rationale
rationale_output := root+"/"+output_dir+"/eval-rationale/"+name+"/"+model

# Run rationale evaluation on GPT 4o output
rationale:
    {{eval_cmd}} rationale run {{rationale_flags}} --output {{rationale_output}}

# Metrics for all experiments for paper output
all-metrics:
    #!/usr/bin/env fish
    echo "Metrics for model: {{model}}, demos: {{demos}}"
    {{root}}/scripts/experiments/show_eval_results.fish {{root}}/{{output_dir}}/**/metrics.json

scimon_flags := "--demos " + demos + " -n " + n + " -m " + model + " --papers " + data_scimon

_scimon prompt:
    {{eval_cmd}} scimon run {{scimon_flags}} \
    --output {{output}}/scimon/scimon-{{prompt}} \
    --user-prompt {{prompt}} \
    --n-evaluations {{n_evaluations}}

# SciMON evaluation
scimon: (_t "Running SciMON evaluation")
    @just _scimon simple

# Clean the output directory based on CLEAN env var
_clean-output:
    #!/usr/bin/env fish
    set output_path "{{root}}/{{output_dir}}"

    # First check if the directory exists
    if not test -d "$output_path"
        echo "Output directory doesn't exist, nothing to clean"
        exit 0
    end

    if test "{{clean}}" = "1"
        echo "Cleaning output directory: $output_path"
        command rm -rf "$output_path"
    else if test "{{clean}}" = "0"
        echo "Skipping directory removal"
    else
        # CLEAN is undefined or has another value, prompt for confirmation
        echo "Will clean output directory: $output_path"
        read -P "Are you sure you want to remove this directory? [y/N] " confirm
        if string match -q -i "y" "$confirm"
            echo "Cleaning output directory..."
            command rm -rf "$output_path"
        else
            echo "Skipping directory removal"
        end
    end

main_table_output := root+"/"+output_dir+"/main-table/"+name+"-main/"+model+"/"+demos

# Show metrics for main table experiments
main-table-metrics:
    #!/usr/bin/env fish
    echo "Main table metrics for model: {{model}}, demos: {{demos}}"
    {{root}}/scripts/experiments/show_eval_results.fish {{main_table_output}}/*/metrics.json

# Run main experiments and generate metrics table
main-table-all: (_t "Running main table experiments")
    @echo Output dir: {{main_table_output}}

    @just scimon
    @mkdir -p {{main_table_output}}/scimon
    @cp {{output}}/scimon/scimon-simple/metrics.json {{main_table_output}}/scimon/metrics.json

    @just graph-sans
    @mkdir -p {{main_table_output}}/graph-sans
    @cp {{output}}/graph/sans/metrics.json {{main_table_output}}/graph-sans/metrics.json

    @just graph-full
    @mkdir -p {{main_table_output}}/graph-full
    @cp {{output}}/graph/full-graph/metrics.json {{main_table_output}}/graph-full/metrics.json

    @just main-table-metrics

# Run all experiments for paper output
all-experiments: (_t "Running ALL experiments")

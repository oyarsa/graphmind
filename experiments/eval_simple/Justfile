    {{eval_cmd}} graph run {{eval_flags}} \
        --output {{peter_ablation_output}}/g_{{graph-prompt}}-e_{{eval-prompt}} \
        --eval-prompt {{eval-prompt}} \
        --graph-prompt {{graph-prompt}} \
        --n-evaluations {{n_evaluations}}


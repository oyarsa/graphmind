# Print highlighted message
_default:
    @just --list --unsorted

# Evaluation (PeerRead)
eval_peer *args:
    @just -f eval_peer/Justfile {{args}}

# Evaluation (ORC)
eval_orc *args:
    @just -f eval_orc/Justfile {{args}}

# Reviews
reviews *args:
    @just -f reviews/Justfile {{args}}

# Evaluation (simple)
eval_simple *args:
    @just -f eval_simple/Justfile {{args}}
